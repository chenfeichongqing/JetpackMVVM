<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="9dp"
        android:paddingRight="15dp"
        android:paddingBottom="9dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/base_lib_shape_nav_search_bar_edit_bg">

            <EditText
                android:id="@+id/nav_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/base_lib_iv_nav_search"
                android:padding="4dp"
                android:drawablePadding="1dp"
                android:imeActionLabel="搜索"
                android:imeOptions="actionSearch"
                android:hint="请输入关键字搜索"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/base_color_333333"
                android:textColorHint="@color/base_color_cccccc"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:id="@+id/img_clean"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:src="@drawable/base_lib_iv_nav_clean" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:text="取消"
            android:visibility="gone"
            android:textColor="@color/base_color_333333"
            android:textSize="@dimen/font_16" />

    </LinearLayout>
</layout>